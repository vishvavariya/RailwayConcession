<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditStudentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="Name:"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/StudentName"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textCursorDrawable="@color/colorPrimaryDark"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="Mobile:"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/StudentMobile"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="DOB:"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/StudentDOB"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:inputType="date"
            android:textCursorDrawable="@color/colorPrimaryDark" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="163dp"
        android:background="@color/colorPrimary"
        android:text="Save Profile"
        android:textColor="@color/colorAccent" />


</RelativeLayout>