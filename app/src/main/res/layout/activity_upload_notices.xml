<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadNotices">



    <TextView
        android:id="@+id/tvUploadNotices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Upload Notices"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp" />

    <Button
        android:id="@+id/btnUploadFiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUploadNotices"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundbutton"
        android:drawableLeft="@drawable/upload_btn"
        android:drawablePadding="2dip"
        android:fontFamily="@font/ml"
        android:gravity="center"
        android:paddingLeft="15dip"
        android:textColor="@color/colorPrimaryDark"
        android:text="Select Files To Upload" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvUploadNotices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnUploadFiles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>