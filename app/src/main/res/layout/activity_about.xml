<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vishva"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:layout_alignStart="@+id/vishva"
        android:text="VISHVA VARIYA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:text="53003160109"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/vishva"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        app:srcCompat="@drawable/vishva" />

    <ImageView
        android:id="@+id/henil"
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:layout_below="@+id/textView3"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/henil" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/henil"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:text="HENIL SHAH"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:text="53003160075"
        android:textSize="14sp" />


</RelativeLayout>
</ScrollView>