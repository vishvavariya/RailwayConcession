<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicationStatus">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_item_padding_left"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/list_item_padding_right"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="@string/email"

            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StudentEmail"
            style="?android:textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textSize="14dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_item_padding_left"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/list_item_padding_right"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="85dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="Name:"

            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StudentName"
            style="?android:textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="169dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_item_padding_left"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/list_item_padding_right"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="85dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="Mobile:"

            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StudentMobile"
            style="?android:textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="251dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_item_padding_left"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/list_item_padding_right"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="85dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="SAPID:"

            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StudentSAPID"
            style="?android:textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="327dp"
        android:baselineAligned="true"
        android:minHeight="@dimen/list_item_height_small"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_item_padding_left"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/list_item_padding_right"
        android:paddingRight="@dimen/list_item_padding_right"
        android:paddingBottom="12dp"
        android:visibility="visible">

        <TextView
            style="?android:textAppearanceSmall"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"

            android:text="Remarks:"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StudentRemarks"
            style="?android:textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/ml"
            android:paddingLeft="50dp"
            android:text="Submitted"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>